@page
@model CoreEstate.Pages.ViewingsModel

@{
    ViewData["Title"] = "My Viewings";
}

<h1>My Viewings</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PropertyViewings[0].ForSaleProperty.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyViewings[0].ForSaleProperty.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyViewings[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyViewings[0].Confirmed)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PropertyViewings)
        {
            <tr>
                @if (item.ForSalePropertyId != null)
                {

                    <td>
                        @Html.DisplayFor(modelItem => item.ForSaleProperty.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForSaleProperty.Address)
                    </td>
                }
                else
                {

                    <td>
                        @Html.DisplayFor(modelItem => item.ToRentProperty.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToRentProperty.Address)
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Confirmed)
                </td>
            </tr>
        }
    </tbody>
</table>
