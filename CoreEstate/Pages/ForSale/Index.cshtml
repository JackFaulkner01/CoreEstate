@page
@model CoreEstate.Pages.ForSale.IndexModel

@{
    ViewData["Title"] = "For sale properties";
}

<h1>@ViewData["Title"]</h1>
<hr />

@foreach (var item in Model.ForSaleProperties)
{
    <div class="card">
        <a asp-page="./Details" asp-route-id="@item.Id">
            <div class="card-header">
                @Html.DisplayFor(modelItem => item.Name) for sale
            </div>
        </a>
        <div class="card-body">
            <div class="card-left">
                <a asp-page="./Details" asp-route-id="@item.Id">
                    IMAGE
                </a>
            </div>
            <div class="card-right">
                <h5 class="card-subtitle">
                    @Html.DisplayNameFor(model => model.ForSaleProperties[0].Price)
                </h5>
                <h3 class="card-title">
                    £@Html.DisplayFor(modelItem => item.Price)
                </h3>
                <h6 class="card-text">
                    @Html.DisplayFor(modelItem => item.Address)
                </h6>
                <p class="card-text">
                    @Html.DisplayFor(modelItem => item.Description)
                </p>
                @if (item.IsFreehold)
                {
                    <p class="card-text fw-light">
                        Freehold Property
                    </p>
                }
                else
                {
                    <p class="card-text fw-light">
                        Leasehold Property
                    </p>
                }
            </div>
        </div>
    </div>
}
