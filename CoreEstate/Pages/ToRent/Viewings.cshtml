@page "{id:int}"
@model CoreEstate.Pages.ToRent.ViewingsModel

@{
    ViewData["Title"] = "Viewings for " + Model.PropertyViewings[0].ToRentProperty.Name + " To Rent";
}

<h1>@ViewData["Title"]</h1>
<hr />

<h3>@Model.PropertyViewings[0].ToRentProperty.Address</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PropertyViewings[0].User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyViewings[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyViewings[0].Confirmed)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PropertyViewings)
        {
            <tr>
                <td>
                    <a asp-page="./ConfirmViewing" asp-route-id="@item.Id">@item.User.Name</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Confirmed)
                </td>
            </tr>
        }
    </tbody>
</table>
